<% content_for(:template_name, "homepage") %>
<% content_for(:hero_image_header, "hero-apple") %>

<div class="hero--apple">
  <header class="main-header">
    <div class="toolbar toolbar--wrap-when-small">
      <div class="toolbar__left">
      </div>
      <div class="toolbar__right>">
        <%= render 'pages/locale' %>
      </div>
    </div>
  </header>
  <section class="slab slab--hero">
    <div class="grid">
      <div class="grid__item width-three-fourths">
        <h2 class="heading-60">
          <% if ENV["COMING_SOON"] == "1"%>
            <em><%= t("index.coming_soon_html") %></em>
          <% end %>
          <%= t("index.header") %>
        </h2>
        <h1 class="text-25">
          <% if ENV["COMING_SOON"] == "1"%>
            <%= t("index.apply_starting") %>
          <% else %>
            <%= t("index.apply_by") %>
          <% end %>
        </h1>
        <% if ENV["COMING_SOON"].blank? %>
          <%= link_to(raw(t("index.apply_now") + " <i class=\"button__icon icon-arrow_forward\"></i>"), how_path, class: "button button--primary") %>
        <% end %>
      </div>
    </div>
  </section>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-seven-twelfths">
        <p class="form-card__body-text"><%= t("index.about") %></p>
      </div>
    </div>
  </section>
  <section class="slab slab--grey-light">
    <div class="grid">
      <div class="grid__item width-seven-twelfths">
        <h2><%= t("index.questions_about") %></h2>
        <p class="form-card__body-text"><%= t("index.learn_more_about") %></p>
        <a href="<%= info_path %>"><button class="button"><%= t("index.learn_more") %></button></a>
      </div>
    </div>
  </section>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-seven-twelfths">
        <p class="form-card__body-text"><%= t("index.joint_program") %></p>
      </div>
    </div>
  </section>
</div>