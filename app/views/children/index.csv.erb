<% # Data -%>
<%- @children.each do |child| -%>
<%= csv_field(child.suid) -%>
<%= csv_field(child.household_id) -%>
<%= csv_field(child.first_name) -%>
<%= csv_field(child.last_name) -%>
<%= csv_field(child.dob) -%>
<%= csv_field(child.school_type.gsub(/_school/, '')) -%>
<%= csv_field(child.household.signature) -%>
<%= csv_field(child.household.residential_street) -%>
<%= csv_field(child.household.residential_street_2) -%>
<%= csv_field(child.household.residential_city) -%>
<%= csv_field('CA') -%>
<%= csv_field(child.household.residential_zip_code) -%>
<%= csv_field(child.household.mailing_street.or_if_blank(child.household.residential_street)) -%>
<%= csv_field(child.household.mailing_street_2.or_if_blank(child.household.residential_street_2)) -%>
<%= csv_field(child.household.mailing_city.or_if_blank(child.household.residential_city)) -%>
<%= csv_field('CA') -%>
<%= csv_field(child.household.mailing_zip_code.or_if_blank(child.household.residential_zip_code)) -%>
<%= csv_field('') -%>
<%= csv_field('') -%>
<%= csv_field(child.household.language) -%>
<%= csv_field(child.household.submitted_at) -%>
<%= csv_field(child.household.application_experience) -%>
<%= csv_field(child.household.confirmation_code, last: true) -%>
<%- end -%>
